   "source": [
    "%%time\n",
    "final_df \\\n",
    "    .select( \\\n",
    "        col(\"bookID\"),\n",
    "        col(\"title\"),\n",
    "        col(\"authors\"),\n",
    "        col(\"average_rating\"),\n",
    "        col(\"publication_date\"),\n",
    "        col(\"publisher\"),\n",
    "        row_number().over(Window.partitionBy(\"publisher\").orderBy(\"title\")).alias(\"row_number\")\n",
    "    ) \\\n",
    "    .show(10, False)"
   ]
